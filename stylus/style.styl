.font
	font: 14px Lato, sans-serif

body
	background-color white
	padding: 5px 50px
	@extends .font

a
	color: #00B7FF
	text-decoration none

h1
	text-align center
	img
		max-width 90%
		height auto

form
	center(800px)
	input
		font-size 1.2rem
		border 2px solid #eee
		font-family 'Ubuntu Mono'
		font-weight 400
		padding 0.2em
		width 100%
	&.q
		input
			font-size 2rem

logo_height = 60px

header
	position relative
	padding-top 1px
	.user-logo
		position absolute
		right 0
	h1
		margin-top logo_height

.user-logo
	display flex
	height logo_height
	line-height logo_height
	.user-initial
		width logo_height
		border-radius (logo_height/2)
		background rgba(black, 0.4)
		color white
		text-align center
		font-size (logo_height/2)
		a
			color inherit
	.user-name
		padding-left 1em
		color black